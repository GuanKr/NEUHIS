<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="neu.his.dao.TranslateMapper" >

    <select id="translate_title" parameterType="java.lang.Integer" resultType="String">
        select title_name from title where title.id = #{id}
    </select>

    <select id="translate_role" parameterType="java.lang.Integer" resultType="String">
        select role_name from role where role.id = #{id}
    </select>

    <select id="translate_department" parameterType="java.lang.Integer" resultType="String">
        select department_name from department where department.id = #{id}
    </select>

</mapper>